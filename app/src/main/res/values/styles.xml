<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/toolbarStyle</item>
        <item name="android:actionBarStyle">@style/toolbarStyle</item>
    </style>

    <style name="toolbarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <item name="android:colorPrimary">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="android:background">@color/dark_red</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="searchStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
    </style>

</resources>
